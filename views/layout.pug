doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{title || 'The Daily Catch'}
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")

    block head

  body
    .d-flex
      nav#sidebar.bg-dark.text-white.d-flex.flex-column.align-items-center.px-2.pt-3(position="fixed", style="height: 100vh; width: 60px; transition: width 0.3s;", onmouseover="expandSidebar()", onmouseout="collapseSidebar()")
        .text-center.mb-3
          img.logo.img-fluid(src="/images/logo.png", alt="Logo", style="width: 40px; height: 40px; border-radius: 50%; transition: width 0.3s;")
          h1#sidebar-title.fs-5.mt-2.text-white.d-none The Daily Catch

        .nav.flex-column.w-100.text-center
          a.nav-link.text-white.py-2.d-flex.align-items-center.justify-content-center(href="/profile")
            i.material-icons.fs-5.me-2 person
            span.d-none Profile
          a.nav-link.text-white.py-2.d-flex.align-items-center.justify-content-center(href="/settings")
            i.material-icons.fs-5.me-2 settings
            span.d-none Settings
          a.nav-link.text-white.py-2.d-flex.align-items-center.justify-content-center(href="/help")
            i.material-icons.fs-5.me-2 help
            span.d-none Help

        .mt-auto.w-100.text-center
          a.nav-link.text-white.py-2.d-flex.align-items-center.justify-content-center(href="/logout")
            i.material-icons.fs-5.me-2 exit_to_app
            span.d-none Logout
      
      .content(style="width: calc(100% - 60px);")
        block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")

    script.
      function expandSidebar() {
        let sidebar = document.getElementById('sidebar');
        let title = document.getElementById('sidebar-title');
        sidebar.style.width = "200px";
        document.querySelectorAll('#sidebar span').forEach(el => el.classList.remove('d-none'));
        title.classList.remove('d-none');
      }

      function collapseSidebar() {
        let sidebar = document.getElementById('sidebar');
        let title = document.getElementById('sidebar-title');
        sidebar.style.width = "60px";
        document.querySelectorAll('#sidebar span').forEach(el => el.classList.add('d-none'));
        title.classList.add('d-none');
      }
